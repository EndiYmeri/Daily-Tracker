// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String         @unique
  username     String         @unique
  password     String
  avatarImg    String
  dateOfBirth  DateTime
  joinedAt     DateTime       @default(now())
  gender       String
  userDateInfo UserDateInfo[]
  followers    Followers[]
  Following    Following[]
}

model Date {
  id           Int            @id @default(autoincrement())
  date         DateTime       @unique
  userDateInfo UserDateInfo[]
}

model UserDateInfo {
  id                   Int  @id @default(autoincrement())
  sleepTime            Int  @default(0)
  workTime             Int  @default(0)
  physicalActivityTime Int  @default(0)
  brainActivityTime    Int  @default(0)
  learningTime         Int  @default(0)
  user                 User @relation(fields: [userId], references: [id])
  userId               Int
  date                 Date @relation(fields: [dateId], references: [id])
  dateId               Int
}

model Followers {
  id       Int     @id @default(autoincrement())
  user     User    @relation(fields: [userId], references: [id])
  userId   Int
  accepted Boolean @default(false)
}

model Following {
  id       Int     @id @default(autoincrement())
  user     User    @relation(fields: [userId], references: [id])
  userId   Int
  accepted Boolean @default(false)
}
